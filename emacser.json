{
    "title": "Remap shortcut to emacs for VMware",
    "rules": [
        {
            "description": "VMwareを使用する際にemacsが使えるようになります",
            "manipulators": [
                {
                    "from": {
						"key_code": "a",
						"modifiers": {
							"mandatory": ["left_control"]
						}
                    },
                    "to": [
                        {
							"key_code": "home"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.omnissa\\.horizon\\.client\\.mac"
                            ]
                        },
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 1452,
                                    "product_id": 591
                                },
                                {
                                    "vendor_id": 1133,
                                    "product_id": 45890
                                }
                            ]
                        }
                    ],
                    "type": "basic"
                },
